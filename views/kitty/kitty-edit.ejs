<% include ../partials/boilerplate %>

<form class="addKittyForm" method='POST' action='/kitty/<%= id %>?_method=PUT'>
  <h2>Edit your Kitty</h2>
  <div class="form-group">
    <label>Breed Name:</label>
    <input name='breed_name' type='text' value='<%= kitty.breed_name %>' />
  </div>

 <div class="form-group">
    <label>Enter a new image URL:</label> 
    <input name='img_url' type='text' value='<%= kitty.img_url %>' />
  </div>
  <div class="form-group">
  <label>Choose your cat's characteristic:</label>
    <!-- <input name='characteristic_id'' type='text' value='<%= kitty.characteristic_id %>' /> -->
    <select name='characteristic_id'>
      <option value='1'>Affectionate</option>
      <option value='2'>Energetic</option>
      <option value='3'>Intelligent</option>
      <option value='4'>Child Friendly</option>
    </select>
  </div>

  <div class="form-group">
    <input class="kittyFormSubmit" type='submit' value='Edit your kitty!' />
  </div>
</form>

<% include ../partials/end %>

